<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/blue_deep"
                      android:startColor="@color/blue_deep"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/blue_deep"
                      android:startColor="@color/blue_deep"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/blue_grauss"
                      android:startColor="@color/blue_grauss"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>

